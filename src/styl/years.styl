.kalendaro__years {
    position: relative;
    left: 0;
    height: 30px;
    margin-bottom: 35px;
    user-select: none;

    &-selector {
        position: absolute;
        width: 100%;
        height: 30px;
        overflow: hidden;
        font-size: 14px;
        user-select: none;
        border-radius: 3px;
        background: rgb(244, 244, 243);

        &-container {
            position: absolute;
            left: 0;
            top: 0;
        }

        &-period {
            background: rgba(255,207,0,1);
            position: absolute;
            right: 100px;
            width: 1px;
            height: 32px;
            font-size: 0;
            line-height: 0;
            z-index: 9;
            display: none;
        }

        & .kalendaro__year {
            position: absolute;
            top: 5px;
            width: 3em;
            margin-left: -1.5em;
            font-size: 12px;
            text-align: center;
            cursor: pointer;
            z-index: 11;
            color: rgba(0, 0, 0, .5);
            font-weight: bold;

            &:hover {
                color: #000;
            }

            &:after {
                content: '';
                display: block;
                width: 1px;
                height: 9px;
                margin: 2px auto;
                background: rgba(0, 0, 0, .2);
            }
        }

        &-line {
            position: absolute;
            width: 100%;
            height: 30px;
            left: 0;
            top: 0;
            font-size: 0;
            line-height: 0;
            z-index: 2;
        }

        &-dragger {
            position: absolute;
            top: 0;
            right: 20px;
            width: 70px;
            height: 30px;
            margin-left: -1px;
            font-size: 0;
            line-height: 0;
            z-index: 12;
            cursor: ew-resize;

            &:after {
                content: '';
                border: 2px solid rgba(0, 0, 0, .7);
                display: block;
                background: rgba(255, 255, 255, .4);
                border-radius: 4px;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 1px;
                right: -1px;
            }

            &:hover:after {
                border-color: rgba(0, 0, 0, 1);
                background: rgba(255, 255, 255, .6);
            }
        }
    }
}
