.kalendaro {
    &__submit-shadow {
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 68px;

        &:before {
            content: '';
            border-top: 1px solid rgba(0, 0, 0, .1);
            margin: 0 20px;
            display: block;
        }
    }

    &__single  {
        .kalendaro__submit-shadow {
            height: 0;
        }

        .kalendaro__submit-dates {
            display: none;
        }
    }

    &__submit {
        position: absolute;
        white-space: nowrap;
        right: 1em;
        bottom: 0.3em;
        padding: 0.3em 0;
        text-align: right;
    }

    .kalendaro__submit-dates
    {
        position: absolute;
        bottom: 0;
        right: 0;
        left: 0;
        font-size: 13px;
        text-align: center;
        white-space: nowrap;
        margin: 0 20px 20px;

        input {
            width: 6.1em;
        }
    }


    &__from-block,
    &__to-block {
        width: 81px;
    }

    &__from-block {
        margin-right: 5px;
    }

    &__to-block {
        margin-left: 5px;
    }

    &__show {
        position: absolute;
        right: 0;
    }
}
