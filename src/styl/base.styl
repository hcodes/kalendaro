.kalendaro {
    display: none;
    position: absolute;
    left: 0;
    top: 0;
    padding: 0 20px 20px;
    background: #fff;
    cursor: default;
    overflow: hidden;
    z-index: 33001;
    border: 1px solid rgba(0, 0, 0, .1);
    box-shadow: 0 10px 20px -5px rgba(0, 0, 0, .4);
    box-sizing: border-box;

    &, th, td {
        font-family: Arial, sans-serif;
        font-size: 13px;
        font-weight: normal;
    }

    th, td {
        white-space: nowrap;
    }

    table {
        border-spacing: 0;
        border-collapse: separate;
    }

    &_touch {
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }

    &__title {
        display: inline-block;
        margin-top: 12px;
        color: rgba(0, 0, 0, .5);
    }

    &__head {
        color: #333;
        position: relative;
        height: 40px;
        user-select: none;
    }
}

